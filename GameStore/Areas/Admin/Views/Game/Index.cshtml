@model List<Game>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Games</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <a class="btn btn-primary" style="margin-bottom: 2%" asp-controller="Game" asp-action="Create">Create</a>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>GameId</th>
                        <th>CreatedAt</th>
                        <th>IsDeleted</th>
                        <th colspan="3" style="text-align: center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td><img style="max-width: 150px; max-height: 75px" src="~/images/games/@item.ImgPath" alt="Alternate Text" /></td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Description</td>
                        <td>@item.GameId</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.IsDeleted</td>
                        <td>
                                <a class="btn btn-primary"
                               asp-action="Update" asp-route-id="@item.Id">
                                Update
                            </a>
                        </td>
                        <td>
                                @{
                                    string color = item.IsDeleted ? "success" : "warning";
                                    string button = item.IsDeleted ? "Show" : "Hide";
                                }
                            <a class="btn btn-@color"
                               asp-action="ShowHide" asp-route-id="@item.Id">
                               @button
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger"
                               asp-action="Delete" asp-route-id="@item.Id">
                                    Delete
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<h1>Index</h1>

